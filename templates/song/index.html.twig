{% extends 'layout/front.html.twig' %}

{% block body %}


    <main>

        <div class="container mb-4 mt-4">
            <form class="row">
                <div class="col-8 p-0">
                    <input type="text" class="w-100 h-100 " name="search" id="">
                </div>
                <div class="col-4 p-0">
                    <button type="submit" class="btn btn-primary w-100 h-100">Recherche</button>
                </div>
            </form>
        </div>

        <div class="container-lg">

                <div class="row">
                    {% for song in songs %}
                    <div class="col-lg-3 col-md-4 col-sm-6 song-item">
                        <a href="{{ path("song.show",{id: song.id}) }}">
                            <img class="poster" src="{{ vich_uploader_asset(song,'imageFile') }}">
                        </a>
                        <h4 class="song-title">{{ song.title }}</h4>
                        <p class="singer">{{ song.singer }}</p>
                    </div>

                    {% endfor %}
            </div>
        </div>
    </main>

{% endblock %}